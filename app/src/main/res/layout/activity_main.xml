<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:padding="5dp"
    android:orientation="vertical"
    tools:context="com.souluizfernando.ligueacobrar.MainActivity">

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/hint_search"
        android:inputType="textPersonName"/>
    <TextView
        android:text="@string/enter_operadora"
        android:layout_width="match_parent"
        android:textSize="15sp"
        android:textAlignment="center"
        android:layout_height="wrap_content" />
    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:prompt="@string/enter_operadora">
    </Spinner>
    <fragment
        android:id="@+id/mainFragment"
        android:layout_width="match_parent"
        class="com.souluizfernando.ligueacobrar.MainActivity$ContactsFragment"
        tools:layout="@layout/contact_list_view"
        android:layout_height="wrap_content"></fragment>
</LinearLayout>
